{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "downlevelIteration": true,
    "outDir": "build",
    "sourceMap": true
  },
  "include": [
    "src"
  ]
}
